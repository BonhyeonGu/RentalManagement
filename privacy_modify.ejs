    <script>
        function reset_chk(myForm){
            location.href='/admin_signup'
         }
        function modify(){
            const f = document.getElementById('f1')
            f.action = '/privacy_rewrite'
            f.method = 'post'
            f.submit()
        }

        window.onload = function(){
          var user_attend_status = rows_list[0]['user_attend_status'];
          var user_grade = rows_list[0]['user_grade'];

          if (user_attend_status =='0') {
            document.getElementById('statusO1').setAttribute('select', 'selected');
          } else if (user_attend_status == '1') {
            document.getElementById('statusO2').setAttribute('select', 'selected');
          } else if (user_attend_status == '2') {
            document.getElementById('statusO3').setAttribute('select', 'selected');
          }

          if (user_grade=='1') {
            document.getElementById('gradeO1').setAttribute('select','selected');
          } else if (user_grade=='2') {
            document.getElementById('gradeO2').setAttribute('select','selected');
          } else if (user_grade=='3') {
            document.getElementById('gradeO3').setAttribute('select','selected');
          } else if (user_grade=='4') {
            document.getElementById('gradeO4').setAttribute('select','selected');
          }
        }
    </script>
</head>
<body onload = "document.getElementById('user_school').focus()">

  <%- include('nav',{login_user_id:id, login_user_auth: auth}) %>

  <!-- ======= main ======= -->
  <main id="main">

    <section class="section pb-5">
      <div class="container">

        <div class="row mb-5 align-items-end">
          <div class="col-md-6" data-aos="fade-up">
            <h2>개인정보 변경 신청서</h2>
            <p class="mb-0">개인정보 변경 신청서에 필요한 정보를 입력하고 동아대 S06-605를 방문해주세요.
            </p>
          </div>

        </div>

        <div class="row">
          <div class="col-md-6 mb-5 mb-md-0" data-aos="fade-up">

            <form action="#" method="post" role="form" id = "f1" name = "f1" onreset = "return reset_chk(this);">

              <div class="row gy-3">
                <div class="col-md-12 form-group">
                    <strong class="d-block mb-1">ID</strong>
                    <span><%=rows_list[0]['user_id']%>🤭</span>
                    <input type="hidden" class="form-control" name = "user_id" id = "user_id" value="<%=rows_list[0]['user_id']%>" required>
                </div>
                <div class="col-md-12 form-group">
                    <label for ="user_school">학교명</label>
                    <input type="text" class="form-control" name = "user_school" id = "user_school" value="<%=rows_list[0]['user_school']%>" required>
                </div>
                <div class="col-md-12 form-group">
                    <label for ="user_num">학번</label>
                    <input type="text" class="form-control" name = "user_num" id = "user_num" value="<%=rows_list[0]['user_num']%>" required>
                </div>
                <div class="col-md-12 form-group">
                    <label for ="user_name">이름</label>
                    <input type="text" class="form-control" name = "user_name" id = "user_name" value="<%=rows_list[0]['user_name']%>" required>
                </div>
                <div class="col-md-12 form-group">
                    <label for ="user_department">소속학과</label>
                    <input type="text" class="form-control" name = "user_department" id = "user_department" value="<%=rows_list[0]['user_department']%>"required>
                </div>
                <div class="col-md-12 form-group">
                  <label class="visually-hidden" for="user_grade">학년</label>
                  <select class="form-select" name="user_grade" id="user_grade" required>
                      <option value="1" id="gradeO1">1학년</option>
                      <option value="2" id="gradeO2">2학년</option>
                      <option value="3" id="gradeO3">3학년</option>
                      <option value="4" id="gradeO4">4학년</option>
                  </select>
                </div>
                <div class="col-md-12 form-group">
                    <label class="visually-hidden" for="user_attend_status">재학여부</label>
                    <select class="form-select" name="user_attend_status" id="user_attend_status" required>
                        <option value="0" id="statusO1">졸업</option>
                        <option value="1" id="statusO2">휴학</option>
                        <option value="2" id="statusO3">재학</option>
                    </select>
                </div>
                <div class="col-md-12 form-group">
                    <label for ="user_phone">휴대폰 번호</label>
                    <input type="text" class="form-control" name = "user_phone" id = "user_phone" value="<%=rows_list[0]['user_phone']%>" required>
                </div>
                
                <div class="col-md-12 my-3"></div>

                <div class="col-md-6 mt-0 form-group">
                    <input type = "button" class="readmore d-block w-100" onclick="modify()" value = "변경 신청"/>
                    <input type = "reset" class="readmore d-block w-100" value = "취소"/>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main><!-- End #main -->

  <%- include('footer') %>
</body>

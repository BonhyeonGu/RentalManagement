  <script>
    function go(clicked_id) {
      var form = document.getElementById(clicked_id).parentElement
      form.submit()
    }
  </script>
</head>

<body>
  <%- include('nav',{login_user_id:id, login_user_auth: auth}) %>

  <main id="main">

    <!-- ======= Works Section ======= -->
    <section class="section site-portfolio">
      <div class="container">
        <div class="row mb-5 align-items-center">
          <div class="col-md-12 col-lg-6 mb-4 mb-lg-0" data-aos="fade-up">
            <h2>환영합니다, 비품 대여 페이지 입니다</h2>
            <p class="mb-0">Welcome, This is equipment landing page</p>
          </div>
          <div class="col-md-12 col-lg-6 text-start text-lg-end" data-aos="fade-up" data-aos-delay="100">
            <!-- <div id="filters" class="filters">
              <a href="#" data-filter="*" class="active">몰루</a>
              <a href="#" data-filter=".web">니가</a>
              <a href="#" data-filter=".design">알아서</a>
              <a href="#" data-filter=".branding">찾아바</a>
              <a href="#" data-filter=".photography">훙</a>
            </div> -->
          </div>
        </div>
        <div id="portfolio-grid" class="row no-gutter" data-aos="fade-up" data-aos-delay="200">
          <% for (var i = 0; i < product_list.length; i++) { %>
            <div class="item web col-sm-6 col-md-4 col-lg-4 mb-4">
              <form action="/work_single" method="get">
                <div class="item-wrap fancybox" id="<%= product_list[i]['id'] %>" onclick="go(this.id)">
                  <input type="hidden" name="product_id" value="<%= product_list[i]['id'] %>">
                  <div class="work-info">
                    <h3><%= product_list[i]['name'] %></h3>
                    <span><%= product_list[i]['remaining_qty'] %></span>
                  </div>

                  <% if (product_list[i]['image']==null) { %>
                    <img class="img-fluid" src="img/defalut.jpg">
                  <% } else { %>
                    <img class="img-fluid" src="img/<%=product_list[i]['image']%>">
                  <% }%>
                </div>
              </form>
            </div>
          <% } %>
        </div>

        <!-- ======= Pagenation Section ======= -->
        <div class="section">
          <div class="center">
            <div class="pagination" data-aos="fade-up">
              <a href="#">&laquo;</a>
              <a class="active" href="#">1</a>
              <a href="#">2</a>
              <a href="#">3</a>
              <a href="#">&raquo;</a>
            </div>
          </div>
        </div>
        <!-- End Pagenation Section -->

      </section><!-- End  Works Section -->
    </main><!-- End #main -->

    <%- include('footer') %>

</body>

</html>